{
  "name": "typescript-apollo-express-graphql-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node 'dist/server.js'",
    "build": "tsc -p . && ncp src dist",
    "test": "jest",
    "test:watch": "jest --verbose --detectOpenHandles",
    "lint": "tsc --noEmit && eslint 'src/**/*.ts{,x}'",
    "lint:fix": "eslint 'src/**/*.ts{,x}' --fix",
    "lint:complexity": "tsc --noEmit && eslint 'src/**/*.ts{,x}' --rule 'complexity: [warn, 5]'",
    "lint:params": "tsc --noEmit && eslint 'src/**/*.ts{,x}' --rule 'max-params: [warn, 3]'",
    "lint:depth": "tsc --noEmit && eslint 'src/**/*.ts{,x}' --rule 'max-depth: [warn, 4]'",
    "lint:lines-per-function": "tsc --noEmit && eslint 'src/**/*.ts{,x}' --rule 'max-lines-per-function: [warn, 50]'",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon 'src/server.ts' --exec 'ts-node' src/server.ts -e ts,graphql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.2",
    "nodemon": "^2.0.14",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "ts-jest": "^26.4.4"
  },
  "dependencies": {
    "apollo-server-core": "^3.4.0",
    "apollo-server-express": "^3.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql": "^16.0.0",
    "helmet": "^4.6.0",
    "http": "0.0.1-security",
    "ncp": "^2.0.0"
  }
}
